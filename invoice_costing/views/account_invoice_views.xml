<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_view_form" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']" position="after">
                <page string="Payments" name="payments">
                    <group>
                        <group string="Payments">
                            <field name="invoice_shipping"/>
                            <field name="payment_cod"/>
                            <!--
                                                <field name="invoice_count"/>
                            -->
                            <field name="product_cost"/>
                            <field name="processing_abyas" readonly="1" attrs="{'invisible':[('type','=','out_invoice')]}"/>
                            <field name="shipping_packaging"/>
                            <field name="gift_packaging_cost"/>
                            <field name="total_costing"/>
                        </group>
                        <group string="Vat for Payments">
                            <field name="vat_invoice_shipping"/>
                            <field name="vat_payment_cod"/>
                            <field name="vat_product_cost"/>
                            <field name="vat_processing_abyas" attrs="{'invisible':[('type','=','out_invoice')]}"/>
                            <field name="vat_shipping_packaging"/>
                            <field name="vat_git_packaging_cost"/>
                            <field name="total_vat"/>
                        </group>
                    </group>
                    <group col="4" colspan="4" string="Payment Accounts">
                        <field name="shipping_cost_credit_account_id"/>
                        <field name="shipping_cost_debit_account_id"/>
                        <field name="payment_cod_credit_account_id"/>
                        <field name="payment_cod_debit_account_id"/>
                        <field name="product_cost_credit_account_id"/>
                        <field name="product_cost_debit_account_id"/>
                        <field name="processing_abyas_credit_account_id" attrs="{'invisible':[('type','=','out_invoice')]}"/>
                        <field name="processing_abyas_debit_account_id" attrs="{'invisible':[('type','=','out_invoice')]}"/>
                        <field name="shipping_packaging_credit_account_id"/>
                        <field name="shipping_packaging_debit_account_id"/>
                        <field name="gift_packaging_cost_credit_account_id"/>
                        <field name="gift_packaging_cost_debit_account_id"/>
                    </group>
                </page>
            </xpath>

            <!--
                        <xpath expr="//page[@name='other_info']//field[@name='partner_bank_id']" position="after">

                        </xpath>
            -->

        </field>
    </record>
</odoo>
